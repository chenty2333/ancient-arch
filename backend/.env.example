# === Local Development Configuration ===
# This file is used by 'cargo run' and 'sqlx prepare'
# It should mirror the settings in the root .env where applicable

# Database Connection
# NOTE: Host is 'localhost' here because we are running outside the container
DATABASE_URL=postgres://user:change_me_password@localhost:5432/ancient_arch

# Application Settings
JWT_SECRET=change_me_jwt_secret
JWT_EXPIRATION=3600
RUST_LOG=debug

# Admin User Seeding
# Change before deploying to any shared environment
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me_admin_pass
